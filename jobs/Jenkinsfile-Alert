pipeline {
    agent { label "orca-aws-m" }
    parameters {
        string(name: 'TIMEFRAME', defaultValue: '60')
        string(name: 'RECIPIENTS', defaultValue: 'DevSecOps@q2.com, Q2SecurityChampions@q2.com')
    }
    triggers{ cron('H 6 * * 1') }
    stages {
        stage("Generate Alerts") {
            steps {
                cleanWs()
                checkout scm
                sh '/usr/local/bin/pip3 install pipenv'
                sh "/usr/local/bin/pipenv --python /usr/local/bin/python3 install"
                
                withCredentials([string(credentialsId: 'jenkins-rapid7', variable: 'apikey')]) {
                    sh "/usr/local/bin/pipenv run python3 alert.py"
                }
            }
        }
    }
    post {
        success {
            script {                
                def scans = readJSON file: 'scans.json', text: ''
                def scanresults = ''
                def scancount = 0
                def table = '<tr><td><b>Product</b></td><td><b>Last Scan</b></td></tr>'

                scans.each { item ->
                    scancount +=1
                    scanresults += "<tr><td>${item.Product}</td><td>${item.'Last Scan'}</td></tr>"
                }

                emailext mimeType: 'text/html', attachmentsPattern: 'scans.json',
                body: "The following product(s) have not had a scan in the last ${TIMEFRAME} day(s):<br/><table>${table}${scanresults}</table><br/><br/>Please work with your security champion(s) to kick off scans. https://confluence.q2ebanking.com/pages/viewpage.action?spaceKey=PDH&title=Product+First+Teams", 
                replyTo: 'DevSecOps@q2.com', subject: "${scancount} Product(s) Failing to be Scanned by Rapid 7", to: "${RECIPIENTS}"
            }
        }
        failure { 
            mail to: 'steven.carlson@q2.com', subject: "Build Failure: ${JOB_BASE_NAME}", body: "Failed to generate rapid 7 alerts.  ${BUILD_URL}" 
        }
    }
}